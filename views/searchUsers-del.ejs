<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Search Users</title>
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/search.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>


    <!-- Main Content -->
    <div class="flex-grow-1">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <%- include('partials/header') %>
      </div>

      <div class="container mt-4">
        <% if (query && matchedUsers.length > 0) { %>
          <h3>Search results for "<%= query %>"</h3>
          <div class="row">
            <% matchedUsers.forEach(user => { %>
              <div class="col-md-4 mb-4">
                <div class="card p-3 h-100 shadow-sm">
                  <div class="d-flex align-items-center gap-3">
                    <img src="<%= user.avatar || '/images/default.jpg' %>" width="50" height="50" class="rounded-circle" alt="avatar">
                    <div>
                      <strong>
                        <a href="/users/<%= user._id %>" class="text-dark text-decoration-none">
                          <%= user.username %>
                        </a>
                      </strong><br>
                      <small class="text-muted"><%= user.bio %></small>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <p class="text-center text-muted">No users found for "<%= query %>"</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
