<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Profile</title>

  <link rel="stylesheet" href="/styles/profile.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
</head>

<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <aside class="sidebar d-flex flex-column justify-content-between p-4 bg-light">
      <div>
        <button class="btn btn-primary mb-4"><a href="/" class="nav-link"> Logo</a></button>
        <ul class="nav flex-column gap-3">
          <li><a href="/" class="nav-link"><i class="bi bi-compass"></i> Discover</a></li>
          <li><a href="/upload" class="nav-link"><i class="bi bi-upload"></i> Upload</a></li>
          <li><a href="/messages" class="nav-link"><i class="bi bi-chat"></i> Messages</a></li>
          <li><a href="/explore" class="nav-link"><i class="bi bi-tag"></i> Explore Tags</a></li>
        </ul>
      </div>
      <div class="d-flex flex-column gap-2 align-items-start">
        <a href="/profile" class="d-flex align-items-center gap-2 text-dark text-decoration-none">
          <img src="/images/propic.png" alt="avatar" class="rounded-circle" style="width: 32px; height: 32px;">
          <span>Me</span>
        </a>
        <a href="/logout" class="btn btn-outline-secondary btn-sm">Logout</a>
      </div>
      
    </aside>

    <!-- Main Content -->
    <div class="flex-grow-1">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <div class="flex-grow-1 px-4">
          <input type="search" class="form-control" placeholder="Login for more contentcontents">
        </div>
        <div class="px-4">
          <a href="#">Create Center</a>
        </div>
      </div>

      <!-- Profile Content -->
      <div class="container py-4 text-center">
        <img src="images/propic.png" alt="avatar" class="rounded-circle mb-2" width="100" height="100">
        <h4>sewwithjane</h4>
        <button class="btn btn-outline-dark btn-sm mb-2">Edit profile</button>
        <div>
          <button class="btn btn-primary rounded-pill px-4">Share your style !</button>
        </div>

        <div class="d-flex justify-content-center gap-4 mt-3">
          <div><strong>37</strong> Posts</div>
          <div><strong>56</strong> Followers</div>
          <div><strong>263</strong> Likes&collects</div>
        </div>

        <!-- Tabs -->
        <ul class="nav nav-tabs justify-content-center mt-4 mb-3">
          <li class="nav-item">
            <a class="nav-link active" href="#">Posts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Saved</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Liked</a>
          </li>
        </ul>

        <!-- Posts -->
        <div class="container py-4">
          <h2>My Sewing Projects</h2>
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
            <% if (posts && posts.length > 0) { %>
              <% posts.forEach(post => { %>
                <div class="col">
                  <div class="card shadow-sm rounded">

                    <!-- thumbnail -->
                    <a href="/posts/<%= post._id %>" style="text-decoration: none;">
                      <img src="<%= post.steps[0]?.image || '/images/default.jpg' %>" class="card-img-top" alt="Post Image" />
                    </a>

                    <div class="card-body">
                      <!-- title -->
                      <a href="/posts/<%= post._id %>" style="text-decoration: none; color: inherit;">
                        <h5 class="card-title mb-1 fw-bold"><%= post.title %></h5>
                      </a>

                      <!-- tigs -->
                      <div class="d-flex flex-wrap gap-2 mb-2">
                        <% post.tags.forEach(tag => { %>
                          <span class="badge bg-light text-dark">#<%= tag %></span>
                        <% }) %>
                      </div>

                      <!-- like button-->
                      <div class="d-flex justify-content-between align-items-center">
                        <% const liked = post.likedBy.some(user => user._id.toString() === currentUser?.toString()); %>

                        <% if (currentUser) { %>
                          <!-- 已登录时，正常点赞功能 -->
                          <form action="/posts/<%= post._id %>/like" method="POST" class="like-form" data-post-id="<%= post._id %>">
                            <button type="submit" class="btn btn-light like-btn border-0">
                              <i class="<%= liked ? 'bi bi-heart-fill text-danger' : 'bi bi-heart text-secondary' %>"></i>
                              <span class="like-count"><%= post.likedBy.length %></span>
                            </button>
                          </form>
                        <% } else { %>
                          <!-- 未登录时，引导跳转 -->
                          <a href="/login" class="btn btn-light border-0">
                            <i class="bi bi-heart text-secondary"></i>
                            <span class="like-count"><%= post.likedBy.length %></span>
                          </a>
                        <% } %>


                          <!-- comment -->
                        <!-- <a href="/posts/<%= post._id %>" class="btn btn-light border-0">
                          <i class="bi bi-chat text-secondary"></i>
                        </a> -->

                      <!-- collect -->
                      <!-- <div class="d-flex justify-content-between align-items-center"> -->
                        <% const bookmarked = post.bookmarkedBy.some(user => user._id.toString() === currentUser?.toString()); %>
                          <% if (currentUser) { %>
                            <form action="/posts/<%= post._id %>/bookmark" method="POST" style="display:inline;">
                              <button type="submit" class="btn btn-light save-btn border-0">
                                <i class="<%= bookmarked ? 'bi bi-bookmark-fill text-primary' : 'bi bi-bookmark text-secondary' %>"></i>
                                <span class="bookmark-count"><%= post.bookmarkedBy.length %></span>
                              </button>
                            </form>
                          <% } else { %>
                            <a href="/login" class="btn btn-light save-btn border-0">
                              <i class="bi bi-bookmark text-secondary"></i>
                            </a>
                          <% } %>
                       <!-- </div> -->
                    </div>

                      
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div class="col">
                <p>No posts yet. Upload your first sewing project!</p>
              </div>
            <% } %>
          </div>
        </div>


      </div>
    </div>
  </div>
</body>
</html>
