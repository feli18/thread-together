<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Profile</title>

  <link rel="stylesheet" href="/styles/profile.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/mobile.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
</head>

<body class="m-0 p-0">
  <div class="d-flex" style="height: 100vh;">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>


    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column main-content" style="overflow-y: auto;">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <div class="flex-grow-1 px-4">
          <%- include('partials/header.ejs') %>
          <%# include('partials/searchUserResults.ejs') %>
        </div>
        <div class="px-4">
          <!-- <a href="#">Create Center</a> -->
        </div>
      </div>

      
      

      <div class="container py-4 ">
        <!-- Profile Info -->
         <div class="text-center mb-4">
          <img src="<%= currentUser?.avatar || '/images/user.png' %>" width="100" height="100" alt="Avatar" class="rounded-circle mb-2 border border-3  ">
          <h4><%= user.username %></h4>
          <% if (user.bio) { %><p class="text-muted"><%= user.bio %></p><% } %>
          <% if (user.website) { %>
            <p><a href="<%= user.website %>" target="_blank" class="btn btn-outline-dark btn-sm ">üåê Website</a></p>
            
          <% } %>
          <a href="/profile/edit" class="btn btn-outline-dark btn-1 btn-sm ">Edit Profile</a>

         </div>
        



        <div class="d-flex justify-content-center gap-4 mt-3">
          <div><strong><%= userPosts.length %></strong> Posts</div>
          <div><strong><%= user.followers.length %></strong> Followers</div>
          <div><strong><%= likedPosts.length + collectedPosts.length %></strong> Likes&Collects</div>
        </div>

        <!-- Tabs -->
   
         <ul class="nav nav-tabs justify-content-center mt-4 mb-3" id="profileTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="posts-tab" data-bs-toggle="tab" href="#posts" role="tab">Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="likes-tab" data-bs-toggle="tab" href="#likes" role="tab">Likes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="collect-tab" data-bs-toggle="tab" href="#collect" role="tab">Collect</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="followers-tab" data-bs-toggle="tab" href="#followers" role="tab">Followers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="following-tab" data-bs-toggle="tab" href="#following" role="tab">Following</a>
            </li>
          </ul>


        <!-- Tab Contents -->
        <div class="tab-content" id="profileTabContent">
          <div class="tab-pane fade show active" id="posts" role="tabpanel">
            <% if (userPosts.length === 0) { %>
              <p class="text-muted">No posts yet.</p>
            <% } else { %>
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4">
                <% userPosts.forEach(post => { %>
                  <%- include('partials/postCardGrid', { post, currentUser }) %>
                <% }) %>
              </div>
            <% } %>
          </div>
            <div class="tab-pane fade" id="likes" role="tabpanel">
              <% if (likedPosts.length === 0) { %>
                <p class="text-muted">No liked posts.</p>
              <% } else { %>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4">
                  <% likedPosts.forEach(post => { %>
                    <%- include('partials/postCardGrid', { post, currentUser }) %>
                  <% }) %>
                </div>
              <% } %>
            </div>
            <div class="tab-pane fade" id="collect" role="tabpanel">
              <% if (collectedPosts.length === 0) { %>
                <p class="text-muted">No collected posts.</p>
              <% } else { %>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-4">
                  <% collectedPosts.forEach(post => { %>
                    <%- include('partials/postCardGrid', { post, currentUser }) %>
                  <% }) %>
                </div>
              <% } %>
            </div>
          <div class="tab-pane fade" id="followers" role="tabpanel">
            <% if (user.followers.length === 0) { %>
              <p class="text-muted">No one is following you yet.</p>
            <% } else { %>
              <div class="row">
                <% user.followers.forEach(follower => { %>
                  <div class="col-6 col-md-3 col-lg-2 mb-4">
                    <div class="card h-100 text-center p-3 follow-card" style="cursor: pointer; transition: transform 0.2s ease;">
                      <img src="<%= follower.avatar %>" class="rounded-circle mb-2" width="70" height="70" alt="Avatar">
                      <div>@<%= follower.username %></div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>
          </div>

          <div class="tab-pane fade" id="following" role="tabpanel">
            <% if (user.following.length === 0) { %>
              <p class="text-muted">You're not following anyone yet.</p>
            <% } else { %>
              <div class="row">
                <% user.following.forEach(f => { %>
                  <div class="col-6 col-md-3 col-lg-2 mb-4">
                    <div
                      class="card h-100 text-center p-3 follow-card"
                      onclick="window.location.href='/users/<%= f._id %>'"
                      style="cursor: pointer; transition: transform 0.2s ease;"
                    >
                      <img
                        src="<%= f.avatar %>"
                        alt="Avatar"
                        class="rounded-circle mb-2"
                        width="70"
                        height="70"
                      />
                      <div class="fw-semibold text-truncate">@<%= f.username %></div>
                    </div>
                  </div>

                <% }) %>
              </div>
            <% } %>
          </div>

        </div>

      </div>



    </div>
  </div>
  <script>
     document.querySelectorAll('.like-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.classList.toggle('liked');
        btn.querySelector('i').classList.toggle('bi-heart');
        btn.querySelector('i').classList.toggle('bi-heart-fill');
      });
    });

    document.querySelectorAll('.save-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.classList.toggle('saved');
        btn.querySelector('i').classList.toggle('bi-bookmark');
        btn.querySelector('i').classList.toggle('bi-bookmark-fill');
      });
    });

    document.querySelectorAll('.comment-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        alert("Comment feature coming soon!");
      });
    });
    document.querySelectorAll('.like-form').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const postId = form.dataset.postId;

        const res = await fetch(`/posts/${postId}/like`, {
          method: 'POST'
        });

        if (res.ok) {
          
          window.location.reload(); 
        }
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
