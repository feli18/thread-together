<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Notifications</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
  <link rel="stylesheet" href="/styles/notifications.css"/>
</head>

<body>
  <div class="d-flex">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="flex-grow-1">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <div class="flex-grow-1 px-4">
          <%- include('partials/header') %>
          <%- include('partials/searchUserResults') %>
        </div>
      </div>

      <div class="container py-4">
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4 justify-content-center" id="notificationTabs">
          <li class="nav-item">
            <a id="tab-comments" class="nav-link active" data-bs-toggle="tab" href="#comments-tab">
              Comments & @
              <% if (unreadCommentCount > 0) { %>
                <span class="badge bg-danger rounded-pill"><%= unreadCommentCount %></span>
              <% } %>
            </a>
          </li>
          <li class="nav-item">
            <a id="tab-likes" class="nav-link" data-bs-toggle="tab" href="#likes-tab">
              Likes & Saves
              <% if (unreadLikeCount > 0) { %>
                <span class="badge bg-danger rounded-pill"><%= unreadLikeCount %></span>
              <% } %>
            </a>
          </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
          <!-- Comments & Replies -->
          <div id="comments-tab" class="tab-pane fade show active">
            <% notifications.forEach(n => { %>
              <% if (n.post && n.sender && (n.type === 'comment' || n.type === 'reply')) { %>
                <a href="/notifications/read/<%= n._id %>" class="text-decoration-none text-dark">
                  <div class="message-item d-flex justify-content-between align-items-center mb-3">
                    <div class="left d-flex align-items-center">
                      <img src="<%= n.sender.avatar || '/images/user.png' %>" width="40" class="rounded-circle me-3">
                      <div>
                        <div class="username fw-semibold">@<%= n.sender.username %></div>
                        <div class="action text-muted">
                          <%= n.type === 'comment' ? 'commented on' : 'replied to a comment on' %> your post
                          <span class="ms-2 time small"><%= n.createdAt.toLocaleDateString() %></span>
                        </div>
                        <div class="text-muted small">[<%= n.comment?.text || 'no comment text' %>]</div>
                      </div>
                    </div>
                    <img src="<%= n.post.coverImage || '/images/placeholder.png' %>" width="60" class="preview-img rounded">
                  </div>
                </a>
              <% } %>
            <% }) %>
          </div>

          <!-- Likes & Saves -->
          <div id="likes-tab" class="tab-pane fade">
            <% notifications.forEach(n => { %>
              <% if (n.post && n.sender && (n.type === 'like' || n.type === 'bookmark')) { %>
                <a href="/notifications/read/<%= n._id %>" class="text-decoration-none text-dark">
                  <div class="message-item d-flex justify-content-between align-items-center mb-3">
                    <div class="left d-flex align-items-center">
                      <img src="<%= n.sender.avatar || '/images/user.png' %>" width="40" class="rounded-circle me-3">
                      <div>
                        <div class="username fw-semibold">@<%= n.sender.username %></div>
                        <div class="action text-muted">
                          <%= n.type === 'like' ? 'liked' : 'saved' %> your post
                          <span class="ms-2 time small"><%= n.createdAt.toLocaleDateString() %></span>
                        </div>
                      </div>
                    </div>
                    <img src="<%= n.post.coverImage || '/images/placeholder.png' %>" width="60" class="preview-img rounded">
                  </div>
                </a>
              <% } %>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS & Your Script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/notifications.js"></script>
  <script>
    const tabComments = document.getElementById('tab-comments');
    const tabLikes    = document.getElementById('tab-likes');

    tabComments.addEventListener('shown.bs.tab', () => markRead('comments', tabComments));
    tabLikes   .addEventListener('shown.bs.tab', () => markRead('likes',    tabLikes));

    function markRead(type, tabEl) {
      if (!tabEl.querySelector('.badge')) return;
      fetch('/notifications/mark-read', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ type })
      })
      .then(res => res.json())
      .then(({ totalUnread }) => {
        const badge = tabEl.querySelector('.badge');
        if (badge) badge.remove();

        const sideBadge = document.querySelector('aside.sidebar a[href="/notifications"] .badge');
        if (totalUnread > 0) {
          if (sideBadge) sideBadge.textContent = totalUnread;
          else {
            const a = document.querySelector('aside.sidebar a[href="/notifications"]');
            const span = document.createElement('span');
            span.className = 'badge bg-danger rounded-circle';
            span.textContent = totalUnread;
            a.appendChild(span);
          }
        } else {
          sideBadge?.remove();
        }
      })
      .catch(console.error);
    }
  </script>
</body>
</html>
