        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4">
  <% if (posts && posts.length > 0) { %>
    <% posts.forEach(post => { %>
      <div class="col">
        <a href="/posts/<%= post._id %>" style="text-decoration: none; color: inherit;">
          <div class="card">
            <img src="<%= post.steps[0]?.image || '/images/default.jpg' %>" class="card-img-top" alt="Post Image" />
            <div class="card-body">
              <p class="card-title mb-1 fw-bold"><%= post.title %></p>
              <div class="d-flex flex-wrap gap-2 mb-2">
                <% post.tags.forEach(tag => { %>
                  <span class="badge bg-light text-dark"><%= tag %></span>
                <% }) %>
              </div>
              <div class="d-flex justify-content-around align-items-center post-actions">
                <button class="btn btn-light like-btn"><i class="bi bi-heart"></i></button>
                <button class="btn btn-light comment-btn"><i class="bi bi-chat"></i></button>
                <button class="btn btn-light save-btn"><i class="bi bi-bookmark"></i></button>
              </div>
