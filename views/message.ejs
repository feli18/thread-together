<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Messages</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>

  <link rel="stylesheet" href="/styles/variables.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="/styles/style.css" />
  <!-- <link rel="stylesheet" href="/styles/messages.css"/> -->

  
  
  <style>
    a.list-group-item:hover {
    background-color: #f0f0f0;
    }
  </style>
</head>
<body class="m-0 p-0">
  <div class="d-flex" style="height: 100vh;">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="flex-grow-1">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
        <div class="flex-grow-1 px-4">
          <%- include('partials/header') %>
          <%# include('partials/searchUserResults') %>
        </div>
      </div>

      <!-- Conversation List -->
      <div class="container py-4">
        <h4 class="mb-4">Messages</h4>
        <% if (conversations.length === 0) { %>
          <p class="text-muted">No conversations yet.</p>
        <% } else { %>
          <ul class="list-group">
            <% conversations.forEach(conv => { %>
                <a href="/messages/<%= conv.user._id %>" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <img src="<%= conv.user.avatar %>" width="40" class="rounded-circle me-2" />
                        <span>@<%= conv.user.username %></span>
                    </div>
                    
                    <% if (conv.unreadCount > 0) { %>
                        <span class="badge bg-danger rounded-pill"><%= conv.unreadCount %></span>
                    <% } %>
                </a>

            <% }) %>
            </ul>

        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
