<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= post.title %> - ThreadTogether</title>
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="/styles/post.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="m-0 p-0">
 <div class="d-flex" style="height: 100vh;">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>
    <div class="container py-4" style="overflow-y: auto;">
      <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm mb-4">‚Üê Return</a>

  <div class="post-detail-container d-flex flex-wrap gap-4" >

   <!-- Left Column -->
    <div class="left-column" style="flex: 1; min-width: 300px;">
      <img src="<%= post.coverImage || post.steps[0]?.image || '/images/default.jpg' %>" alt="<%= post.title %>" class="cover-img " />
      <div class="info">
        <div class="d-flex justify-content-between align-items-start">
          <h1 class="post-title" style="font-size: 25px; "><%= post.title %></h1>
          <div class="d-flex align-items-center gap-2 ms-3">
            <% const viewerId = currentUser && currentUser._id ? currentUser._id.toString() : null; %>
            <% const liked = viewerId ? post.likedBy.some(user => user._id.toString() === viewerId) : false; %>
            <% if (viewerId) { %>
              <form action="/posts/<%= post._id %>/like" method="POST" class="like-form m-0" data-post-id="<%= post._id %>">
                <button type="submit" class="icon-btn btn btn-light like-btn border-0">
                  <i class="<%= liked ? 'bi bi-heart-fill text-danger' : 'bi bi-heart text-secondary' %>"></i>
                  <span class="like-count"><%= post.likedBy.length %></span>
                </button>
              </form>
            <% } else { %>
              <a href="/login" class="icon-btn btn btn-light border-0">
                <i class="bi bi-heart text-secondary"></i>
                <span class="like-count"><%= post.likedBy.length %></span>
              </a>
            <% } %>

            <% const bookmarked = viewerId ? post.bookmarkedBy.some(user => user._id.toString() === viewerId) : false; %>
            <% if (viewerId) { %>
              <form action="/posts/<%= post._id %>/bookmark" method="POST" class="m-0" style="display:inline;">
                <button type="submit" class="icon-btn btn btn-light save-btn border-0">
                  <i class="<%= bookmarked ? 'bi bi-bookmark-fill text-primary' : 'bi bi-bookmark text-secondary' %>"></i>
                  <span class="bookmark-count"><%= post.bookmarkedBy.length %></span>
                </button>
              </form>
            <% } else { %>
              <a href="/login" class="icon-btn btn btn-light save-btn border-0">
                <i class="bi bi-bookmark text-secondary"></i>
              </a>
            <% } %>
          </div>
        </div>
        <p class="text-muted d-flex align-items-center gap-2 mt-2">
          <a href="/users/<%= post.author._id %>">
            <img src="<%= post.author.avatar || '/images/default-avatar.png' %>" alt="<%= post.author.username %>" width="32" height="32" class="rounded-circle" />
          </a>
          <a href="/users/<%= post.author._id %>" class="text-decoration-none text-dark fw-semibold"><%= post.author.username %></a>
          <span class="text-muted">&middot; <%= post.createdAt.toLocaleDateString() %></span>
        </p>
        <div class="tags ">
          <% post.tags.forEach(tag => { %>
            <a href="/tags/<%= encodeURIComponent(tag) %>" class="badge tag text-decoration-none me-1">#<%= tag %></a>
          <% }) %>
        </div>
      </div>
      <h5 class="fw-semibold mb-3" style="font-size: 25px; ">Comments</h5>

      <div class="comment-section mt-4">
        <% commentTree.forEach(comment => { %>
          <%- include('partials/commentItem', {
            comment: comment,
            post: post,
            currentUser: currentUser,
            level: 0,
            rootId: comment._id
          }) %>
        <% }) %>
      </div>



      <% if (currentUser) { %>
        <form action="/posts/<%= post._id %>/comments" method="POST" class="mt-4">
          <div class="input-group">
            <input type="text" name="comment" class="form-control" placeholder="Say something..." required />
            <button type="submit" class="btn btn-primary btn-sm">Sent</button>
          </div>
        </form>
      <% } else { %>
        <p class="text-muted mt-3">You need to <a href="/login">login</a> to comment</p>
      <% } %>
    </div>

    <!-- Right Column -->
    <div class="right-column" style="flex: 1.5; min-width: 400px;">
      <div class="post-header d-flex justify-content-between align-items-start  flex-wrap">
        <div class="d-flex gap-2 mt-2 mt-sm-0 align-items-center"><h1 class="post-title" style="font-size: 70px;"><%= post.title %></h1></div>
        
      
        <div class="d-flex flex-column align-items-end">
           <div class="post-actions d-flex gap-2 mt-2 mt-sm-0 align-items-center">
            <% const viewerId = currentUser && currentUser._id ? currentUser._id.toString() : null; %>
            <% const liked = viewerId ? post.likedBy.some(user => user._id.toString() === viewerId) : false; %>

            <% if (viewerId) { %>
                <form action="/posts/<%= post._id %>/like" method="POST" class="like-form" data-post-id="<%= post._id %>">
                <button type="submit" class="icon-btn btn btn-light like-btn border-0">
                    <i class="<%= liked ? 'bi bi-heart-fill text-danger' : 'bi bi-heart text-secondary' %>"></i>
                    <span class="like-count"><%= post.likedBy.length %></span>
                </button>
                </form>
            <% } else { %>
                <a href="/login" class="icon-btn btn btn-light border-0">
                <i class="bi bi-heart text-secondary"></i>
                <span class="like-count"><%= post.likedBy.length %></span>
                </a>
            <% } %>
        
            <% const bookmarked = viewerId ? post.bookmarkedBy.some(user => user._id.toString() === viewerId) : false; %>
                <% if (viewerId) { %>
                <form action="/posts/<%= post._id %>/bookmark" method="POST" style="display:inline;">
                    <button type="submit" class="icon-btn btn btn-light save-btn border-0">
                    <i class="<%= bookmarked ? 'bi bi-bookmark-fill text-primary' : 'bi bi-bookmark text-secondary' %>"></i>
                    <span class="bookmark-count"><%= post.bookmarkedBy.length %></span>
                    </button>
                </form>
                <% } else { %>
                <a href="/login" class="icon-btn btn btn-light save-btn border-0">
                    <i class="bi bi-bookmark text-secondary"></i>
                </a>
                <% } %>
           </div>

          <div class="post-editor-actions d-flex gap-2 mt-2">
            <% if (viewerId && post.author && viewerId === post.author._id.toString()) { %>
              <div class="mb-3">
                  <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                  <a href="/posts/<%= post._id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
              </div>
            <% } %>
          </div>

        </div>

      </div>

      <p><%= post.description %></p>

      <!-- <h4 class="mt-4">Step-by-Step Process</h4> -->
      <div class="steps-row d-flex flex-wrap gap-3">
        <% post.steps.forEach((step, index) => { %>
          <div class="step-box shadow-sm custom-step-box  rounded p-2" style="width: 300px; ">
            <h5><strong>Step <%= index + 1 %></strong></h5>
            <% if (step.type === 'image') { %>
              <img src="<%= step.image %>" class="img-fluid rounded" />
            <% } else if (step.type === 'video') { %>
              <video class="img-fluid rounded" controls>
                <source src="<%= step.video %>" type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            <% } %>
            <p class="mt-2"><%= step.text %></p>
          </div>
        <% }) %>
      </div>
    </div>

  </div>

    </div>
  </div>

  
  
<script>
  document.querySelectorAll('.reply-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const commentId = btn.dataset.replyId;
      const form = document.querySelector(`form.reply-form[data-parent-id="${commentId}"]`);
      if (form) {
        form.classList.toggle('d-none');
        form.querySelector('input[name="comment"]').focus();
      }
    });
  });
  document.querySelectorAll('.toggle-replies-btn').forEach(button => {
    button.addEventListener('click', () => {
      const rootId = button.dataset.rootId;
      const replies = document.querySelectorAll(`.nested-comment[data-root="${rootId}"]`);
      replies.forEach(el => el.classList.remove('d-none'));
      button.remove();
    });
  });
</script>

<script>
  (function(){
    const form = document.currentScript.previousElementSibling;
    if (!form || !form.matches('form.like-form')) return;
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      try {
        const res = await fetch(form.action, { method: 'POST', headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        if (!res.ok) return;
        const data = await res.json();
        const icon = form.querySelector('i');
        const count = form.querySelector('.like-count');
        if (icon && data) {
          icon.className = data.liked ? 'bi bi-heart-fill text-danger' : 'bi bi-heart text-secondary';
        }
        if (count) count.textContent = data.count;
      } catch(err) { console.error('Like failed', err); }
    });
  })();
</script>


</body>
</html>