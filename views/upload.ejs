<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Upload</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="/styles/mobile.css" />
  <link rel="stylesheet" href="/styles/upload.css" />
  <link rel="stylesheet" href="/styles/variables.css" />

</head>
<body class="m-0 p-0">
  <div class="d-flex" style="height: 100vh;">
    <%- include('partials/sidebar') %>
    <div class="flex-grow-1 d-flex flex-column main-content" style="overflow-y: auto;">
      
      <div class="d-flex justify-content-between align-items-center p-3 mt-2">
        
        <button
          type="button"
          class="btn btn-outline-secondary btn-sm"
          onclick="history.back()"
        >‚Üê Back</button>
      </div>
            <div class="text-center my-4">
        <h2 class="fw-bold" style="font-size: 2rem;">Upload Your Project Here ü™°</h2>
        
        <!-- Experiment Mode Selector -->
        <div class="mode-selector mt-4 mb-4">
          <div class="row justify-content-center">
            <div class="col-md-10">
              <div class="alert alert-<%= modeConfig.color %> border-0 mb-3">
                <h5 class="mb-2">
                  <i class="bi bi-<%= mode === 'editable' ? 'pencil-square' : mode === 'locked' ? 'lock' : 'person' %>"></i>
                  <%= modeConfig.name %>
                </h5>
                <p class="mb-0 small"><%= modeConfig.description %></p>
              </div>
              
              <div class="btn-group" role="group" aria-label="Upload modes">
                <% Object.keys(allModes).forEach(modeKey => { %>
                  <a href="/upload?mode=<%= modeKey %>" 
                     class="btn btn-<%= mode === modeKey ? 'primary' : 'outline-secondary' %> btn-sm">
                    <%= modeKey.toUpperCase() %>: <%= allModes[modeKey].name.split(':')[1].trim() %>
                  </a>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
      

      <div class="container py-4 upload-page">

        <form action="/upload" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="mode" value="<%= mode %>">
        <div class="row">
          <!-- Left -->
          <div class="col-md-6">
            <div class="upload-cover-container">
              <input type="file" name="coverImage" id="coverInput" class="d-none" accept="image/*" />
              <label for="coverInput" id="coverLabel">+ Upload Cover Image</label>
              <img id="coverPreview" class="cover-preview" />
              <button
                type="button"
                id="changeCoverBtn"
                class="btn btn-sm btn-outline-light position-absolute"
                style="top: 0.5rem; right: 0.5rem; display: none;"
                title="Change Cover"
              >
                <i class="bi bi-trash"></i>
              </button>
            </div>

            <label class="mt-3">Title</label>
            <input type="text" name="title" class="form-control" required />

            <label class="mt-3">Description</label>
            <textarea name="description" rows="3" class="form-control" required></textarea>

            <label class="mt-3">
              <% if (mode === 'off') { %>
                Manual Tags
              <% } else { %>
                AI Suggested Tags
              <% } %>
            </label>
            <input type="text" name="tags" id="tagsInput" class="form-control" 
                   placeholder="<% if (mode === 'off') { %>Add tags manually, e.g. #vintage #cotton #dress<% } else { %>AI will suggest tags - you can modify them<% } %>" 
                   <% if (mode === 'locked') { %>readonly<% } %> />
            
            <% if (modeConfig.aiEnabled) { %>
              <button type="button" id="getTagsBtn" class="btn btn-outline-info btn-sm mt-2">
                ‚ú® Generate AI Tags
              </button>
            <% } %>
            
            <div class="small text-muted mt-1">
              <i class="bi bi-<%= mode === 'editable' ? 'pencil-square' : mode === 'locked' ? 'lock' : 'person' %>"></i>
              <%= modeConfig.description %>
            </div>
            
            <div id="tagDisplayArea" class="mt-2"></div>

          </div>

          <!-- Right -->
          <!-- <div class="col-md-6">
            <h4>STEPS</h4>
            <div id="stepsContainer"></div>
            <button type="button" class="btn btn-outline-primary mt-2 " id="addStepBtn">+ Add step</button>
            

          </div> -->
          <div class="col-md-6">
            <h4>STEPS <small class="text-muted">(Optional)</small></h4>
            <p class="small text-muted mb-3">Add step-by-step instructions to help others follow your project</p>

            <template id="stepTpl">
              <div class="step-card mb-3" data-step>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <p class="m-0 fw-bold">Step <span data-step-index></span></p>
                  <div class="custom-upload d-flex gap-2">
                    <label class="btn btn-outline-secondary btn-sm m-0">
                      <input type="file" accept="image/*,video/*" hidden data-file name="stepFiles">
                      Choose File
                    </label>
                    <button type="button" class="btn btn-outline-danger btn-sm" data-delete>Delete</button>
                  </div>
                </div>

                <div class="preview-wrap mb-2 d-none" data-preview-wrap>
                  <img data-img class="w-100 rounded d-none" />
                  <video data-video class="w-100 rounded d-none" controls></video>
                </div>

                <textarea class="form-control" rows="2" placeholder="Add description ..." name="stepDescriptions"></textarea>
              </div>
            </template>

            <div id="stepsContainer"></div>
            <button type="button" class="btn btn-outline-primary mt-2" id="addStepBtn">
              <i class="bi bi-plus-circle me-1"></i>Add First Step
            </button>
          </div>



          
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100 ">Post</button>
      </form>

      </div>

      
    </div>
  </div>


  <script>
    window.uploadMode = '<%= mode %>';
    window.modeConfig = <%- JSON.stringify(modeConfig) %>;
  </script>
  <script src="/js/upload.js"></script>

</body>
</html>
