<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Upload</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
  <link rel="stylesheet" href="/styles/upload.css" />
  <link rel="stylesheet" href="/styles/sidebar.css" />
  <link rel="stylesheet" href="styles/variables.css" />
  <link rel="stylesheet" href="/styles/style.css" />

</head>
<body class="m-0 p-0">
  <div class="d-flex" style="height: 100vh;">
    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column" style="overflow-y: auto;">
      
      <div class="d-flex justify-content-between align-items-center p-3 border-bottom mt-2">
        
        <button
          type="button"
          class="btn btn-outline-secondary btn-sm"
          onclick="history.back()"
        >← Back</button>
        <h2 class="m-0">Upload Process Step</h2>
      </div>
      <div class="container py-4 upload-page">

        <form action="/upload" method="POST" enctype="multipart/form-data">
        <div class="row">
          <!-- Left -->
          <div class="col-md-6">
            <div class="upload-cover-container">
              <input type="file" name="coverImage" id="coverInput" class="d-none" accept="image/*" />
              <label for="coverInput" id="coverLabel">+ Upload Cover Image</label>
              <img id="coverPreview" class="cover-preview" />
              <button
                type="button"
                id="changeCoverBtn"
                class="btn btn-sm btn-outline-light position-absolute"
                style="top: 0.5rem; right: 0.5rem; display: none;"
                title="Change Cover"
              >
                <i class="bi bi-pencil"></i>
              </button>
            </div>

            <label class="mt-3">Title</label>
            <input type="text" name="title" class="form-control" required />

            <label class="mt-3">Description</label>
            <textarea name="description" rows="3" class="form-control" required></textarea>

            <label class="mt-3">AI Suggested Tags</label>
            <input type="text" name="tags" id="tagsInput" class="form-control" placeholder="e.g. Vintage, Cotton, Dress" />
            <button type="button" id="getTagsBtn" class="btn btn-outline-info btn-sm mt-2">✨ AI Suggested Tags</button>
            <div id="tagDisplayArea" class="mt-2"></div>

          </div>

          <!-- Right -->
          <div class="col-md-6">
            <h4>STEPS</h4>
            <div id="stepsContainer"></div>
            <button type="button" class="btn btn-outline-primary mt-2 " id="addStepBtn">+ Add next step</button>
            

          </div>
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100 ">Post</button>
      </form>

      </div>

      
    </div>
  </div>


  <script src="/js/upload.js"></script>

</body>
</html>
