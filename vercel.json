{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/health", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/api/server.js" }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "memory": 1024,
      "regions": ["iad1"]
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
